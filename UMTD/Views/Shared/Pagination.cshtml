<table class="pagination-table">
    <tbody>
        <tr>
            <td>
                <div class="pagination-div">
                    @for (int i = 1; i < Model.PageCount + 1; i++)
                    {
                        //href is generated by js
                        if (i == Model.PageNumber)
                        {
                            <button id="page-@Html.Raw(Convert.ToString(i))" class="btn disabled" data-bind="click: gotoPage.bind($data, @Html.Raw(Convert.ToString(i)))">@Html.Raw(Convert.ToString(i))</button>
                        }
                        else
                        {
                            <button id="page-@Html.Raw(Convert.ToString(i))" class="btn" data-bind="click: gotoPage.bind($data, @Html.Raw(Convert.ToString(i)))">@Html.Raw(Convert.ToString(i))</button>
                        }
                    }
                </div>
            </td>
        </tr> 
    </tbody>                                
</table>